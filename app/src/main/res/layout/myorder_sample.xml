<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/order_item_layout.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/foodPhotoImageView"
        android:layout_width="90dp"
        android:layout_margin="2dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/burrgar"
    />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp">

        <TextView
            android:id="@+id/foodNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/candal"
            android:textStyle="bold"
            android:text="Food Name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/candal"
                android:text="Prise:"/>
            <TextView
                android:id="@+id/rupeeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/candal"
                android:textColor="@color/textcolor"
                android:layout_marginStart="8dp"
                android:text="â‚¹"/>

            <TextView
                android:id="@+id/foodpriseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/candal"
                android:text="199"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/fqTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/candal"
            android:text="Quantity:"/>
        <TextView
            android:id="@+id/foodQuantityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/candal"
           android:textColor="@color/textcolor"
            android:text="1"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/orderDateTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/latoregular"

            android:textColor="@color/dark_background_color"
            android:text="Jan 18, 2024 12:30 PM"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
