
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Light Mode  -->
    <item tools:ignore="StateListReachable">
        <shape>
            <solid android:color="@color/light_background_color"/>
            <corners android:radius="15dp"/>
            <stroke android:color="@color/light_stroke_color" android:width="1dp"/>
        </shape>
    </item>
    <!--  Dark Mode  -->
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/dark_background_color"/>
            <corners android:radius="15dp"/>
            <stroke android:color="@color/dark_stroke_color" android:width="1dp"/>
        </shape>
    </item>
</selector>